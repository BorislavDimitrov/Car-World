@using CarWorld.Web.ViewModels.Users
@model EditUserInputModel
@{
    ViewData["Title"] = "Manage Personal Information";
}

<h3>@ViewData["Title"]</h3>

<div>
    <form method="post" class="col-md-6" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <img src="@Model.ImagePath" class="img-circle elevation-2" height=100 width=155 alt="User Image">
            <label asp-for="Image"></label>
            <input asp-for="Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-primary" />
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
