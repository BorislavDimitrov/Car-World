@using CarWorld.Data.Models
@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<nav class="mt-2">

    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        @if (SignInManager.IsSignedIn(User))
        {

            <li>
                <div class=" mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="@UserManager.GetUserAsync(User).Result.ImagePath" class="img-circle" height=50 width=100 alt="User Image">
                    </div>

                    <div class="info">
                        <a class="nav-link text-sky" asp-="Identity" asp-area="" asp-controller="Users" asp-action="AccountManager">@User.Identity.Name</a>
                    </div>
                </div>
            </li>


            <li class="nav-item menu-open">
                <a href="#" class="nav-link active">
                    <i class="nav-icon fas fa-tachometer-alt"></i>
                    <p>
                        Cars
                        <i class="right fas fa-angle-left"></i>
                    </p>
                </a>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <a class="nav-link text-sky" asp-area="" asp-controller="Cars" asp-action="Create">
                            <i class="fa fa-car"></i>
                            Publish your car
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-sky" asp-area="" asp-controller="Cars" asp-action="UserCars">
                            <i class="fa fa-car"></i>
                            My cars
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-item menu-open">
                <a href="#" class="nav-link active">
                    <i class="nav-icon fas fa-tachometer-alt"></i>
                    <p>
                        Forum
                        <i class="right fas fa-angle-left"></i>
                    </p>
                </a>
                <ul class="nav nav-treeview">
                    <li class="nav-item">
                        <a class="nav-link text-sky" asp-area="" asp-controller="Posts" asp-action="Create">
                            <i class="fa fa-car"></i>
                            Make a new post
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-sky" asp-area="" asp-controller="Cars" asp-action="UserCars">
                            <i class="fa fa-car"></i>
                            My posts
                        </a>
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-danger">
                        <i class="fas fa-door-open"></i>
                        Logout
                    </button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-yellow" asp-area="Identity" asp-page="/Account/Register">
                    <i class="fa fa-registered" aria-hidden="true"></i>
                    Register
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-yellow" asp-area="Identity" asp-page="/Account/Login">
                    <i class="fas fa-sign-in-alt"></i>
                    Login
                </a>
            </li>
        }
    </ul>
</nav>