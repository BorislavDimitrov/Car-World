@using CarWorld.Web.ViewModels.Cars
@using CarWorld.Web.ViewModels.Models
@model SearchCarsListViewModel
@{
    ViewData["Title"] = "Search cars, page " + @Model.PageNumber;
    SelectListItem defaultSelectMake = new SelectListItem
            {
                Text = "Select make",
                Value = "",
            };
    Model.Makes.Insert(0, defaultSelectMake);

    var defaultModel = new ModelsDropDown { ModelId = null, ModelName = "Select model" };

    Model.Models.Insert(0, defaultModel);

    SelectListItem defaultSelectRegion = new SelectListItem
            {
                Text = "Select region",
                Value = "",
            };

    Model.Regions.Insert(0, defaultSelectRegion);
}







<hr />

<div class="row">
    @foreach (var car in Model.Cars)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <input type="hidden" name="UserId" value="@car.CreatorId" />
                <img class="card-img-top" src="@car.ThumbnailPicturePath" alt="@car.MakeName @car.ModelName @car.CreationYear">
                <div class="card-body text-center">
                    <h4 class="card-text text-center text-black text-truncate">Title- @car.Title</h4>
                    <h5 class="card-text text-center text-black ">Make- @car.MakeName Model- @car.CreationYear Year- @car.CreationYear Price- @car.Price $</h5>
                    <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary">View</a>
                </div>
            </div>
        </div>
    }
</div>

<hr />

<partial name="_PartialPaging" model="@Model" />