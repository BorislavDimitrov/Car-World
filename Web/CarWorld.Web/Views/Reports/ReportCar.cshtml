@using CarWorld.Data.Models.Enums
@using CarWorld.Web.ViewModels.Reports
@model CarReportInputModel
@{
    ViewData["Title"] = "Report car";

}

<div>

    <form method="post" class="col-md-10" enctype="multipart/form-data">
        <input type="hidden" asp-for="CarId" />
        <input type="hidden" asp-for="ReporterId" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ReportType"></label>
            <select asp-for="ReportType" class="form-control" asp-items="@Html.GetEnumSelectList<ReportType>()">
            </select>
            <span asp-validation-for="ReportType" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-primary" />
    </form>
</div>