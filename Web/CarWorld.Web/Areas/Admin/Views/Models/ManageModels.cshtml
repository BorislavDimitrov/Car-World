@using CarWorld.Web.ViewModels.Administration.Models
@model ModelListViewModel
@{
    ViewData["Title"] = "Manage Models";
    ViewData["Action"] = "ManageModels";
}

<partial name="_AlertsPartial" />

<div class="row">
    <div class="col-12">
        <div class="card">
            <h3 class="card-title">Models</h3>
            <div class="card-header">
                
                <form asp-action="ManageModels" method="get">

                    <div class="form-row">

                        <div class=" col-md-6">
                        <p>
                            Find by model name: <input type="text" name="searchText" value="@ViewData["CurrentFilter"]" />
                            <input type="submit" value="Search" class="btn btn-default" /> |
                            <a asp-action="ManageModels">Reset search</a>
                        </p>
                    </div>


                        <div class="form-group col-md-4">
                            
                                <select asp-for="MakeId" name="MakeId" class="form-control" asp-items="@Model.Makes"></select>
                                <span asp-validation-for="MakeId" class="text-danger"></span>
                            
                            
                        </div>

                    </div>
  
                </form>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Make name</th>
                            <th>Is Deleted</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var carModel in Model.Models)
                        {
                            <tr>
                                <td>@carModel.Name</td>
                                <td>@carModel.MakeName</td>
                                <td>@carModel.IsDeleted</td>
                                <td>
                                    <a asp-area="admin" asp-action="recover" asp-controller="models" asp-route-id="@carModel.Id" class="btn btn-primary btn-success">Recover model</a>
                                    <a asp-area="admin" asp-action="delete" asp-controller="models" asp-route-id="@carModel.Id" class="btn btn-primary btn-danger">Delete model</a>
                                    <a asp-area="admin" asp-action="edit" asp-controller="models" asp-route-id="@carModel.Id" class="btn btn-primary btn-dark">Edit model</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>
<partial name="_PartialPaging" model="@Model" />