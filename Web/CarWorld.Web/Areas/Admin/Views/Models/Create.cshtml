@using CarWorld.Web.ViewModels.Administration.Models
@model CreateModelModel
@{
    ViewData["Title"] = "Create Model";
   
}


<div class="d-flex justify-content-center align-items-center">
    <form method="post" class="col-md-5 align-content-center" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Make</label>
            <select asp-for="MakeId" class="form-control" asp-items="@Model.Makes"></select>
            <span asp-validation-for="MakeId" class="text-danger"></span>
        </div>

        <input type="submit" class="btn btn-primary" />
    </form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
